<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="#f0f0f0">

    <ImageView
        android:id="@+id/jewelImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ph_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/productTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Necklace"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goldKartageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold (Kt): 22" />

        <TextView
            android:id="@+id/goldWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight (g): 10.5" />

    </LinearLayout>

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select" />

</LinearLayout>